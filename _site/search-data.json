ot;,hasWatched: true,rating: 4.5  }];function stringBuilder(movie) {  var result = &amp;amp;quot;You have &amp;amp;quot;;  if (movie.hasWatched) {    result += &amp;amp;quot;watched&amp;amp;quot;;  } else {    result += &amp;amp;quot;has not seen&amp;amp;quot;;  }  result += &amp;amp;#039;&amp;amp;quot;&amp;amp;#039; + movie.title: + &amp;amp;#039;&amp;amp;quot; - &amp;amp;#039;;  result += movie.rating + &amp;amp;quot; stars&amp;amp;quot;;}movies.forEach(function(movie) {  console.log(stringBuilder(movie));});            The arrogant, competitive little snot I was still peeks through sometimes.¬†&amp;#8617;¬†&amp;#8617;2      ",
